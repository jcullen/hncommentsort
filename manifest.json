{
  "name": "HN Comment Sort",
  "version": "0.3",
  "manifest_version": 2,
  "description": "Adds the ability to sort comments on hackernews.com",
  "content_scripts": [
    {
      "matches": ["*://news.ycombinator.com/item*"],
      "js": ["Array.mergeSort.min.js","jquery-2.1.0.min.js","main.js"],
      "css": ["style.css"]
     }
  ],
  "web_accessible_resources": ["sort-options.html"]
}